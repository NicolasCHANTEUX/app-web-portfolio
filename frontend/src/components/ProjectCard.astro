---
/**
 * Composant ProjectCard
 * Carte de projet avec affichage √† 2 niveaux :
 * - Niveau 1 : Titre, tagline (gras), punchline, lesson, tags (visible imm√©diatement)
 * - Niveau 2 : Challenge, Solution, Architecture (accord√©on cliquable)
 */
const { project } = Astro.props;
const isFlagship = project.is_featured === true || project.is_featured === 1;
---

<article class="project-card" class:list={[{ 'flagship': isFlagship }]} data-category={project.category}>
  {isFlagship && <div class="flagship-badge">‚≠ê Flagship</div>}
  
  <!-- Image principale -->
  <div class="card-image">
    <img 
      src={project.image_url || '/images/projects/placeholder.jpg'} 
      alt={project.title}
      loading="lazy"
    />
    <!-- Badges des technos -->
    <div class="tech-badges">
      {project.technologies?.map((tech: string) => (
        <span class="badge">{tech}</span>
      ))}
    </div>
  </div>

  <!-- Contenu de la carte -->
  <div class="card-content">
    <!-- NIVEAU 1 : Visible imm√©diatement -->
    <h3 class="project-title">{project.title}</h3>
    
    {project.details?.tagline && (
      <p class="tagline">{project.details.tagline}</p>
    )}
    
    <p class="punchline">{project.description}</p>

    {project.details?.lesson && (
      <div class="lesson-box">
        <strong>üí° Ce que j'ai appris :</strong>
        <p>{project.details.lesson}</p>
      </div>
    )}

    <!-- NIVEAU 2 : Accord√©on avec les d√©tails techniques -->
    {project.details && (
      <details class="tech-details">
        <summary>
          <span class="summary-text">En savoir plus sur l'architecture</span>
          <span class="summary-icon">üëá</span>
        </summary>
        <div class="details-content">
          {project.details.challenge && (
            <div class="detail-item">
              <strong>üéØ Le D√©fi :</strong>
              <p>{project.details.challenge}</p>
            </div>
          )}
          {project.details.solution && (
            <div class="detail-item">
              <strong>üí° La Solution :</strong>
              <p>{project.details.solution}</p>
            </div>
          )}
          {project.details.architecture && (
            <div class="detail-item">
              <strong>‚öôÔ∏è Infrastructure :</strong>
              <p>{project.details.architecture}</p>
            </div>
          )}
        </details-content>
      </details>
    )}

    <!-- Actions (Liens) -->
    <div class="card-actions">
      {project.demo_url && project.demo_url !== '#' && (
        <a href={project.demo_url} target="_blank" rel="noopener noreferrer" class="btn btn-primary">
          <span class="btn-icon">üöÄ</span>
          Voir le Live
        </a>
      )}
      {project.github_url && (
        <a href={project.github_url} target="_blank" rel="noopener noreferrer" class="btn btn-secondary">
          <span class="btn-icon">üìÇ</span>
          Code Source
        </a>
      )}
    </div>
  </div>
</article>

<style>
  .project-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-normal);
    display: flex;
    flex-direction: column;
    height: 100%;
    position: relative;
  }

  /* Effet Flagship */
  .project-card.flagship {
    border: 2px solid var(--accent-color);
    box-shadow: 0 0 20px rgba(139, 92, 246, 0.3);
  }

  .project-card.flagship:hover {
    box-shadow: 0 0 30px rgba(139, 92, 246, 0.5), 0 10px 40px rgba(0, 0, 0, 0.4);
  }

  .flagship-badge {
    position: absolute;
    top: 15px;
    right: 15px;
    background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
    color: #000;
    padding: 0.5rem 1rem;
    border-radius: var(--radius-md);
    font-weight: 700;
    font-size: 0.85rem;
    z-index: 10;
    box-shadow: 0 4px 10px rgba(251, 191, 36, 0.4);
  }

  .project-card:hover {
    transform: translateY(-5px);
    border-color: var(--accent-color);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  /* Image */
  .card-image {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-normal);
  }

  .project-card:hover .card-image img {
    transform: scale(1.05);
  }

  /* Badges technos */
  .tech-badges {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: var(--spacing-sm);
    background: linear-gradient(to top, rgba(0,0,0,0.9), transparent);
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .badge {
    background: var(--accent-color);
    color: white;
    padding: 0.3rem 0.7rem;
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  /* Contenu */
  .card-content {
    padding: var(--spacing-lg);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    flex-grow: 1;
  }

  .project-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0;
  }

  /* Tagline ultra-courte en gras */
  .tagline {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--accent-color);
    margin: -0.5rem 0 0 0;
    line-height: 1.4;
  }

  /* NIVEAU 1 : Punchline */
  .punchline {
    font-size: 1.05rem;
    line-height: 1.5;
    color: var(--text-secondary);
    margin: 0;
  }

  /* Lesson Box (humanisation) */
  .lesson-box {
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.1) 0%, rgba(139, 92, 246, 0.05) 100%);
    border-left: 4px solid var(--accent-color);
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    margin: var(--spacing-sm) 0;
  }

  .lesson-box strong {
    display: block;
    color: var(--accent-color);
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .lesson-box p {
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--text-primary);
    font-style: italic;
  }

  /* NIVEAU 2 : Accord√©on */
  .tech-details {
    margin: var(--spacing-sm) 0;
    padding: var(--spacing-md);
    background: var(--bg-accent);
    border-radius: var(--radius-md);
    border: 1px solid var(--border-color);
    overflow: hidden;
  }

  .tech-details summary {
    cursor: pointer;
    font-weight: 600;
    color: var(--accent-color);
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    user-select: none;
    padding: var(--spacing-xs);
    border-radius: var(--radius-sm);
    transition: background-color var(--transition-fast);
  }

  .tech-details summary:hover {
    background-color: rgba(139, 92, 246, 0.1);
  }

  .tech-details summary::-webkit-details-marker {
    display: none;
  }

  .summary-icon {
    font-size: 1.2rem;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .tech-details[open] .summary-icon {
    transform: rotate(180deg);
  }

  /* Animation smooth d'ouverture/fermeture */
  .details-content {
    margin-top: var(--spacing-md);
    padding-top: var(--spacing-md);
    border-top: 1px solid var(--border-color);
    animation: slideDown 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0;
    animation-fill-mode: forwards;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Quand ferm√©, annule l'animation */
  .tech-details:not([open]) .details-content {
    animation: slideUp 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @keyframes slideUp {
    from {
      opacity: 1;
      transform: translateY(0);
    }
    to {
      opacity: 0;
      transform: translateY(-10px);
    }
  }

  .detail-item {
    margin-bottom: var(--spacing-md);
  }

  .detail-item:last-child {
    margin-bottom: 0;
  }

  .detail-item strong {
    display: block;
    margin-bottom: var(--spacing-xs);
    color: var(--accent-color);
    font-size: 0.9rem;
  }

  .detail-item p {
    margin: 0;
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--text-secondary);
  }

  /* Actions */
  .card-actions {
    display: flex;
    gap: var(--spacing-sm);
    margin-top: auto;
    padding-top: var(--spacing-md);
  }

  .btn {
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: var(--radius-md);
    font-weight: 600;
    text-decoration: none;
    text-align: center;
    transition: all var(--transition-fast);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .btn-primary {
    background: var(--accent-color);
    color: white;
    flex: 2;
    font-size: 1.05rem;
    padding: var(--spacing-md) var(--spacing-lg);
    box-shadow: 0 4px 12px rgba(139, 92, 246, 0.3);
  }

  .btn-primary:hover {
    background: var(--accent-hover);
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(139, 92, 246, 0.5);
  }

  .btn-secondary {
    background: transparent;
    color: var(--accent-color);
    border: 2px solid var(--accent-color);
    flex: 1;
  }

  .btn-secondary:hover {
    background: var(--accent-color);
    color: white;
  }

  .btn-icon {
    font-size: 1.1rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .card-content {
      padding: var(--spacing-md);
    }

    .project-title {
      font-size: 1.3rem;
    }

    .tagline {
      font-size: 1rem;
    }

    .punchline {
      font-size: 0.95rem;
    }

    .card-actions {
      flex-direction: column;
    }

    .btn {
      width: 100%;
    }

    .flagship-badge {
      top: 10px;
      right: 10px;
      padding: 0.4rem 0.8rem;
      font-size: 0.75rem;
    }
  }
</style>
