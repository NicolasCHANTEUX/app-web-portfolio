<style>
  .hero {
    padding: var(--spacing-xl) 0;
    text-align: center;
    background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-primary) 100%);
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
  }

  .highlight {
    background: linear-gradient(135deg, var(--accent-color), #9333ea);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    color: var(--text-secondary);
    margin-bottom: var(--spacing-sm);
  }

  .hero-description {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: var(--spacing-lg);
    line-height: 1.8;
  }

  .hero-cta {
    display: flex;
    gap: var(--spacing-sm);
    justify-content: center;
    flex-wrap: wrap;
  }

  .dashboard-section {
    background-color: var(--bg-primary);
  }

  .tech-grid {
    margin-top: var(--spacing-md);
  }

  .tech-card {
    text-align: center;
  }

  .tech-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-sm);
  }

  .tech-tags {
    display: flex;
    gap: var(--spacing-xs);
    justify-content: center;
    flex-wrap: wrap;
    margin-top: var(--spacing-sm);
  }

  .tag {
    background-color: var(--bg-accent);
    color: var(--text-primary);
    padding: 0.25rem 0.5rem;
    border-radius: var(--radius-sm);
    font-size: 0.875rem;
  }

  .cta-section {
    padding: var(--spacing-xl) 0;
  }

  .cta-card {
    text-align: center;
    padding: var(--spacing-xl);
  }

  .cta-card h2 {
    margin-bottom: var(--spacing-md);
  }

  .cta-card p {
    margin-bottom: var(--spacing-lg);
    font-size: 1.1rem;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }
    
    .hero-subtitle {
      font-size: 1.2rem;
    }
  }
</style>

<script>
  // Charger les projets phares
  async function loadFeaturedProjects() {
    try {
      const response = await fetch('/api/projects?featured=true');
      const data = await response.json();
      
      if (data.success && data.data.length > 0) {
        const projectsHTML = data.data.map((project: any) => `
          <div class="card project-card">
            <h3 class="card-title">${project.title}</h3>
            <p class="card-text">${project.description || 'Pas de description'}</p>
            <div class="tech-tags">
              ${project.technologies.map((tech: string) => 
                `<span class="tag">${tech}</span>`
              ).join('')}
            </div>
          </div>
        `).join('');
        
        const projectsEl = document.getElementById('featuredProjects');
        if (projectsEl) projectsEl.innerHTML = projectsHTML;
      } else {
        const projectsEl = document.getElementById('featuredProjects');
        if (projectsEl) {
          projectsEl.innerHTML = '<p>Aucun projet phare pour le moment.</p>';
        }
      }
    } catch (error) {
      console.error('Erreur chargement projets:', error);
      const projectsEl = document.getElementById('featuredProjects');
      if (projectsEl) {
        projectsEl.innerHTML = '<p>Erreur lors du chargement des projets.</p>';
      }
    }
  }
  
  loadFeaturedProjects();
</script>
