<style is:global>
  .hero {
    padding: var(--spacing-xl) 0;
    text-align: center;
    background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-primary) 100%);
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
  }

  .highlight {
    background: linear-gradient(135deg, var(--accent-color), #9333ea);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    color: var(--text-secondary);
    margin-bottom: var(--spacing-sm);
  }

  .hero-tagline {
    font-size: 1.2rem;
    color: var(--accent-color);
    font-weight: 500;
    margin-bottom: var(--spacing-md);
    line-height: 1.6;
  }

  .hero-description {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: var(--spacing-lg);
    line-height: 1.8;
  }

  .hero-cta {
    display: flex;
    gap: var(--spacing-sm);
    justify-content: center;
    flex-wrap: wrap;
  }

  .dashboard-section {
    background-color: var(--bg-primary);
    padding: var(--spacing-xl) 0;
  }

  .dashboard-intro {
    text-align: center;
    margin-bottom: var(--spacing-md);
  }

  .dashboard-caption {
    color: var(--text-secondary);
    font-style: italic;
    font-size: 0.95rem;
  }

  .why-section {
    padding: var(--spacing-xl) 0;
    background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-primary) 100%);
  }

  .why-card {
    background: var(--bg-accent);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
    text-align: center;
    border: 1px solid var(--border-color);
  }

  .why-card h2 {
    margin-bottom: var(--spacing-md);
    font-size: 1.8rem;
  }

  .why-card p {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text-secondary);
  }

  .why-card strong {
    color: var(--accent-color);
  }

  .tech-grid {
    margin-top: var(--spacing-md);
  }

  .tech-card {
    text-align: center;
  }

  .tech-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-sm);
  }

  .tech-tags {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 1rem;
  }

  .tag {
    background-color: rgba(139, 92, 246, 0.1);
    color: var(--accent-color);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.85rem;
    border: 1px solid rgba(139, 92, 246, 0.2);
    font-family: 'Fira Code', 'Courier New', monospace;
    white-space: nowrap;
  }

  .cta-section {
    padding: var(--spacing-xl) 0;
  }

  .cta-card {
    text-align: center;
    padding: var(--spacing-xl);
  }

  .cta-card h2 {
    margin-bottom: var(--spacing-md);
  }

  .cta-card p {
    margin-bottom: var(--spacing-lg);
    font-size: 1.1rem;
  }

