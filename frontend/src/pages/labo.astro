---
import Layout from '../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

// R√©cup√©rer tout le contenu du labo
const laboItems = await getCollection('labo');

// Grouper par type
const scripts = laboItems.filter((item: CollectionEntry<'labo'>) => item.data.type === 'script');
const configs = laboItems.filter((item: CollectionEntry<'labo'>) => item.data.type === 'config');
const snippets = laboItems.filter((item: CollectionEntry<'labo'>) => item.data.type === 'snippet');
const tools = laboItems.filter((item: CollectionEntry<'labo'>) => item.data.type === 'tool');

// Pre-render all items
const renderedItems = await Promise.all(
  laboItems.map(async (item: CollectionEntry<'labo'>) => ({
    ...item,
    Content: (await item.render()).Content,
  }))
);

// Ic√¥nes par type
const typeIcons = {
  script: 'ü§ñ',
  config: '‚öôÔ∏è',
  snippet: 'üí°',
  tool: 'üê≥'
};

// Badges de difficult√©
const difficultyColors = {
  beginner: '#10b981',
  intermediate: '#f59e0b',
  advanced: '#ef4444'
};
---

<Layout title="Labo - Atelier DevOps">
  <section class="labo-section">
    <div class="labo-container">
      <!-- Header -->
      <div class="labo-header">
        <h1>üß™ Le Labo</h1>
        <p class="intro">
          Mon atelier d'exp√©rimentations : scripts, configs et hacks pour faire tourner ce portfolio sur du mat√©riel recycl√©.
          <br><strong>Philosophy:</strong> Green IT meets DevOps.
        </p>
      </div>

      <!-- Layout type VS Code -->
      <div class="labo-layout">
        <!-- Sidebar (Explorer) -->
        <aside class="labo-sidebar">
          <div class="sidebar-header">üìÅ EXPLORATEUR</div>
          
          {scripts.length > 0 && (
            <div class="sidebar-section">
              <div class="section-title">
                <span class="icon">ü§ñ</span>
                <span>SCRIPTS ({scripts.length})</span>
              </div>
              <ul class="file-list">
                {scripts.map((item: CollectionEntry<'labo'>) => (
                  <li>
                    <a href={`#${item.slug}`} class="file-item" data-target={item.slug}>
                      <span class="file-icon">üìÑ</span>
                      <span class="file-name">{item.data.title}</span>
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          )}

          {configs.length > 0 && (
            <div class="sidebar-section">
              <div class="section-title">
                <span class="icon">‚öôÔ∏è</span>
                <span>CONFIGS ({configs.length})</span>
              </div>
              <ul class="file-list">
                {configs.map((item: CollectionEntry<'labo'>) => (
                  <li>
                    <a href={`#${item.slug}`} class="file-item" data-target={item.slug}>
                      <span class="file-icon">üìÑ</span>
                      <span class="file-name">{item.data.title}</span>
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          )}

          {tools.length > 0 && (
            <div class="sidebar-section">
              <div class="section-title">
                <span class="icon">üê≥</span>
                <span>OUTILS ({tools.length})</span>
              </div>
              <ul class="file-list">
                {tools.map((item: CollectionEntry<'labo'>) => (
                  <li>
                    <a href={`#${item.slug}`} class="file-item" data-target={item.slug}>
                      <span class="file-icon">üìÑ</span>
                      <span class="file-name">{item.data.title}</span>
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          )}

          {snippets.length > 0 && (
            <div class="sidebar-section">
              <div class="section-title">
                <span class="icon">üí°</span>
                <span>SNIPPETS ({snippets.length})</span>
              </div>
              <ul class="file-list">
                {snippets.map((item: CollectionEntry<'labo'>) => (
                  <li>
                    <a href={`#${item.slug}`} class="file-item" data-target={item.slug}>
                      <span class="file-icon">üìÑ</span>
                      <span class="file-name">{item.data.title}</span>
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          )}
        </aside>

        <!-- Main Content -->
        <main class="labo-main">
          {renderedItems.map((item) => (
              <article id={item.slug} class="labo-article">
                <div class="article-header">
                  <div class="title-row">
                    <h2>
                      <span class="type-icon">{typeIcons[item.data.type as keyof typeof typeIcons]}</span>
                      {item.data.title}
                    </h2>
                    {item.data.difficulty && (
                      <span 
                        class="difficulty-badge" 
                        style={`background: ${difficultyColors[item.data.difficulty as keyof typeof difficultyColors]}`}
                      >
                        {item.data.difficulty}
                      </span>
                    )}
                  </div>
                  <p class="article-description">{item.data.description}</p>
                  <div class="article-tags">
                    {item.data.tags.map((tag: string) => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                </div>
                <div class="article-content prose">
                  <item.Content />
                </div>
              </article>
            )
          )}

          {laboItems.length === 0 && (
            <div class="empty-state">
              <p>üîß Le labo est en construction...</p>
              <p class="hint">Revenez bient√¥t pour d√©couvrir mes scripts et configurations !</p>
            </div>
          )}
        </main>
      </div>
    </div>
  </section>
</Layout>

<script is:inline>
  // Scroll spy pour mettre en √©vidence la section active dans la sidebar
  document.addEventListener('DOMContentLoaded', () => {
    const articles = document.querySelectorAll('.labo-article');
    const navLinks = document.querySelectorAll('.file-item[data-target]');
    
    if (articles.length === 0 || navLinks.length === 0) return;

    // Options pour l'IntersectionObserver
    const options = {
      root: null,
      rootMargin: '-20% 0px -70% 0px', // Zone de d√©tection au centre de l'√©cran
      threshold: 0
    };

    // Callback quand une section entre/sort de la zone visible
    const observerCallback = (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const id = entry.target.id;
          
          // Retirer la classe active de tous les liens
          navLinks.forEach((link) => {
            link.classList.remove('active');
          });
          
          // Ajouter la classe active au lien correspondant
          const activeLink = document.querySelector('.file-item[data-target="' + id + '"]');
          if (activeLink) {
            activeLink.classList.add('active');
          }
        }
      });
    };

    // Cr√©er l'observer
    const observer = new IntersectionObserver(observerCallback, options);

    // Observer toutes les sections
    articles.forEach((article) => {
      observer.observe(article);
    });

    // Smooth scroll pour les liens de navigation
    navLinks.forEach((link) => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const targetId = link.getAttribute('data-target');
        const targetSection = document.getElementById(targetId);
        
        if (targetSection) {
          targetSection.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  });
</script>

<style>
  .labo-section {
    min-height: 100vh;
    background: var(--bg-primary);
  }

  .labo-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: var(--spacing-lg);
  }

  .labo-header {
    margin-bottom: var(--spacing-xl);
  }

  .labo-header h1 {
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
  }

  .intro {
    font-size: 1.1rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .intro strong {
    color: var(--accent-color);
  }

  /* Layout VS Code style */
