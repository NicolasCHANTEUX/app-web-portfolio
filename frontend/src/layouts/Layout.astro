---
// Layout principal du site
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { 
  title, 
  description = "Portfolio auto-h√©berg√© - DevOps & Full Stack Developer" 
} = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <title>{title}</title>
  </head>
  <body>
    <header class="main-header">
      <nav class="navbar">
        <div class="container">
          <a href="/" class="logo">QG Num√©rique</a>
          <ul class="nav-menu">
            <li><a href="/">Home</a></li>
            <li><a href="/architecture">Architecture</a></li>
            <li><a href="/showroom">Showroom</a></li>
            <li><a href="/labo">Labo</a></li>
            <li><a href="/timeline">Timeline</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
          <button class="theme-toggle" id="themeToggle" aria-label="Toggle theme">
            üåì
          </button>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="main-footer">
      <div class="container footer-content">
        <div class="footer-main">
          <p class="footer-title">
            <strong>QG Num√©rique</strong> - D√©veloppeur Full-Stack & DevOps
          </p>
          <p class="footer-tagline">
            Fait avec ‚ù§Ô∏è et auto-h√©berg√© sur mon infrastructure üñ•Ô∏è
          </p>
        </div>
        <div class="footer-status">
          <p class="server-status-footer">
            <span id="footerStatus">Chargement...</span>
          </p>
          <div class="footer-links">
            <a href="https://github.com/NicolasCHANTEUX" target="_blank" rel="noopener">GitHub</a>
            <span>‚Ä¢</span>
            <a href="/architecture">Infrastructure</a>
            <span>‚Ä¢</span>
            <a href="/contact">Contact</a>
          </div>
        </div>
      </div>
    </footer>

    <!-- Scripts -->
    <script>
      // Theme toggle
      const themeToggle = document.getElementById('themeToggle');
      const html = document.documentElement;
      
      // Charger le th√®me sauvegard√©
      const savedTheme = localStorage.getItem('theme') || 'light';
      html.setAttribute('data-theme', savedTheme);
      
      themeToggle?.addEventListener('click', () => {
        const currentTheme = html.getAttribute('data-theme');
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        html.setAttribute('data-theme', newTheme);
        localStorage.setItem('theme', newTheme);
      });

      // Footer status
      async function updateFooterStatus() {
        try {
          const response = await fetch('/api/server/status');
          const data = await response.json();
          
          if (data.success) {
            const uptime = data.data.uptime.formatted;
            const cpu = data.data.cpu.percent;
            const statusEl = document.getElementById('footerStatus');
            if (statusEl) {
              statusEl.textContent = `üü¢ Online | Uptime: ${uptime} | CPU: ${cpu}%`;
            }
          }
        } catch (error) {
          const statusEl = document.getElementById('footerStatus');
          if (statusEl) statusEl.textContent = 'üî¥ Offline';
        }
      }
      
      updateFooterStatus();
      setInterval(updateFooterStatus, 30000); // Mise √† jour toutes les 30s

      // Analytics simple
      if (window.location.hostname !== 'localhost') {
        fetch('/api/analytics/track', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ path: window.location.pathname })
        }).catch(() => {});
      }
    </script>
  </body>
</html>
